<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_container_habits"
    android:background="@drawable/i_app_background"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curve_border_white_background"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="5dp"
                android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

            <TextView
                android:id="@+id/heading_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/backButton"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/takevitmens"
                android:textColor="@color/input_header_color"
                android:textSize="18sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/write_habit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/goBack"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/choosefrequency"
                android:textColor="@color/input_header_color"
                android:textSize="28sp"
                android:textStyle="bold" />
            >
        </LinearLayout>


        <LinearLayout
            android:id="@+id/radio_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_from"
            android:layout_marginTop="20dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/radio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RadioButton
                    android:id="@+id/radio_beginner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/write_habit_button"
                    android:checked="true"
                    android:padding="20dp"
                    android:buttonTint="@color/radio_button"
                    android:textColor="@android:color/black"
                    android:text="@string/beginner" />

                <RadioButton
                    android:id="@+id/radio_intermediate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/write_habit_button"
                    android:padding="20dp"
                    android:textColor="@android:color/black"
                    android:layout_marginTop="15dp"
                    android:buttonTint="@color/radio_button"
                    android:text="@string/Intermediate" />

                <RadioButton
                    android:id="@+id/radio_advance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:background="@drawable/write_habit_button"
                    android:padding="20dp"
                    android:buttonTint="@color/radio_button"
                    android:drawablePadding="20dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/advanced" />

            </RadioGroup>
        </LinearLayout>

        <Button
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/curve_button_green"
            android:text="@string/save"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>