<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userhome.AddHabitFragment"
    android:background="@color/black_light"
    android:gravity="bottom"
    android:baselineAligned="false"
    android:padding="10dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/goto_habits"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/go_to_habit_button"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/habits_logo"
            android:src="@drawable/calendarhabit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:text="@string/go_to_habits"
            android:layout_gravity="center"
            android:textColor="@color/onboarding_heading_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goto_reminders"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/go_to_habit_button"
        android:gravity="center"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/reminder_logo"
            android:src="@drawable/clipboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:text="@string/go_to_reminders"
            android:layout_gravity="center"
            android:textColor="@color/onboarding_heading_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/goto_journal"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:background="@drawable/go_to_habit_button"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/journal_logo"
            android:src="@drawable/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:text="@string/go_to_journal"
            android:layout_gravity="center"
            android:textColor="@color/onboarding_heading_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>