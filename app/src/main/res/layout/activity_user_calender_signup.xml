<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="40dp"
    android:paddingBottom="40dp"
    android:background="@drawable/i_app_background"
    android:orientation="vertical">

    <TextView
        android:drawableStart="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:drawablePadding="20dp"
        android:text="@string/signup_header_back"
        android:id="@+id/header_signup_back"
        android:textColor="@color/input_header_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/login_form"
        android:background="@drawable/curve_border_white_background"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/header_signup_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/sync_calender"
            android:text="@string/sync_calender"
            android:textColor="@color/input_header_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/image_view"
            android:layout_below="@+id/sync_calender"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--            <ImageView-->
<!--                android:id="@+id/apple_calendar"-->
<!--                android:layout_weight="1"-->
<!--                android:padding="10dp"-->
<!--                android:background="@drawable/signup_calender_border"-->
<!--                android:src="@drawable/apple_calender_logo"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="122dp"-->
<!--                android:layout_marginEnd="8dp"/>-->
            <ImageView
                android:id="@+id/google_calendar"
                android:layout_weight="1"
                android:padding="10dp"
                android:background="@drawable/signup_calender_border"
                android:src="@drawable/google_calender_logo"
                android:layout_width="wrap_content"
                android:layout_height="122dp"
                android:layout_marginStart="8dp"/>
            <ImageView
                android:layout_weight="1"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="122dp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/image_view"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--            <TextView-->
<!--                android:text="@string/iphone_calender"-->
<!--                android:layout_weight="1"-->
<!--                android:textColor="@color/onboarding_heading_color"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginEnd="5dp"/>-->
            <TextView
                android:text="@string/google_calendar"
                android:layout_weight="1"
                android:textColor="@color/onboarding_heading_color"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"/>
            <TextView
                android:text="@string/iphone_calender"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/next"
        android:text="@string/create_account"
        android:layout_alignParentBottom="true"
        android:background="@drawable/curve_button_green"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>
</RelativeLayout>