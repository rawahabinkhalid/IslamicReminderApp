<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="30dp"
    android:layout_marginTop="40dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/curve_border_white_background"
    tools:context=".login.LoginActivity">

    <RelativeLayout
        android:id="@+id/journal_of_shukar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="30dp"
        android:paddingRight="20dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="5dp"
            android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

        <TextView
            android:id="@+id/goBack_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/backButton"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/Journal_of_shukar"
            android:textColor="@color/input_header_color"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/write_journal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/goBack_home"
            android:hint="Allhamdullilah for..."
            android:letterSpacing="0.13"
            android:textColor="@color/dark_green"
            android:textColorHint="@color/dark_green"
            android:textSize="20sp" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/write_journal_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_message"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/journal_of_shukar" />

    <Button
        android:id="@+id/add_message"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/curve_button_green"
        android:text="@string/add_journal"
        android:textSize="18sp" />
</RelativeLayout>