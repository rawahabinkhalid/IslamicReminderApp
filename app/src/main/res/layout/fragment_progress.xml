<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    tools:context=".Progress.FragmentProgress"
    android:background="@drawable/i_app_background">
<ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            //Ajr Tracker Linear Layout
            <LinearLayout
                android:orientation="vertical"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:background="@drawable/curve_border_white_background">
                <TextView
                    android:id="@+id/ajrTracker"
                    android:text="@string/ajrTracker"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/onboarding_heading_color"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/progresshere"
                    android:layout_below="@+id/ajrTracker"
                    android:text="@string/view_progress_here"
                    android:textSize="16sp"
                    android:paddingBottom="30dp"
                    android:textColor="@color/onbaording_heading_details_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            //Daily Goals Lyout Starts here
            <LinearLayout
                android:id="@+id/dailygoals"
                android:orientation="vertical"
                android:layout_below="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_border_white_background"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/progress_daily_goals"
                    android:text="@string/progress_daily_goals"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black_light"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.github.mikephil.charting.charts.PieChart
                    android:padding="20dp"
                    android:id="@+id/remindersCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="300sp"></com.github.mikephil.charting.charts.PieChart>
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                <TextView
                    android:id="@+id/upcoming_reminders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/upcoming_reminders"
                    android:textSize="16sp"
                    android:textColor="@color/onboarding_heading_color"/>
                    <TextView
                        android:layout_toRightOf="@+id/upcoming_reminders"
                        android:id="@+id/upcoming_reminders_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upcoming_reminders_total"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/pink"/>
                    <TextView
                        android:layout_below="@+id/upcoming_reminders"
                        android:id="@+id/time_remaining_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_remaining_heading"
                        android:layout_marginTop="10dp"
                        android:textSize="16sp"
                        android:textColor="@color/onboarding_heading_color"/>
                    <TextView
                        android:layout_toRightOf="@+id/time_remaining_heading"
                        android:layout_below="@+id/upcoming_reminders_total"
                        android:id="@+id/remianing_time_digits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/upcoming_reminders_digits"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/pink"/>
                </RelativeLayout>
            </LinearLayout>
            //Streak Linear Layout starts Here
            <LinearLayout
                android:orientation="vertical"
                android:layout_below="@+id/dailygoals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/curve_border_white_background"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/streaks"
                    android:text="@string/streaks_heading"
                    android:textSize="20sp"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/black_light"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.github.mikephil.charting.charts.PieChart
                    android:padding="20dp"
                    android:id="@+id/streaksCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="300sp"></com.github.mikephil.charting.charts.PieChart>
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/longestStreak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/longest_streaks"
                        android:textSize="16sp"
                        android:textColor="@color/onboarding_heading_color"/>
                    <TextView
                        android:layout_toRightOf="@+id/longestStreak"
                        android:id="@+id/logestStreakDay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/longest_streaks_day"
                        android:textSize="16sp"
                        android:paddingLeft="5dp"
                        android:textColor="@color/pink"/>
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</FrameLayout>