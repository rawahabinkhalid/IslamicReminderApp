<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSignup.LoginSignupActivity"
    android:background="@drawable/i_app_background"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:paddingTop="40dp"
    android:paddingBottom="30dp"
    android:gravity="start|center"
    android:orientation="vertical">

    <include layout="@layout/onbaording_app_logo_heading"
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>

    <TextView
        android:layout_weight="2"
        android:textSize="30sp"
        android:textColor="@color/onboarding_heading_color"
        android:text="@string/optimze_ibadah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start|center"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom">
        <Button
            android:id="@+id/login_button"
            android:text="@string/login_button"
            android:textSize="16sp"
            android:background="@drawable/curve_button_green"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"/>
        <Button
            android:id="@+id/signup_button"
            android:text="@string/signup_button"
            android:background="@drawable/curve_button_pink"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:id="@+id/forget_password_link"
            android:text="@string/forgot_password"
            android:textSize="14sp"
            android:textAlignment="center"
            android:textColor="@color/onbaording_heading_details_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>