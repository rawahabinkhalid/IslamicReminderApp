<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@string/journal_date"
            android:textColor="@color/light_grey"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/journal_description_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/journal_message_layout"
            android:letterSpacing="0.12"
            android:lineSpacingExtra="4dp"
            android:padding="20dp"
            android:text="I almost lost my wallet on the bus but I found it! ðŸ˜…"
            android:textColor="@color/onbaording_heading_details_color"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>